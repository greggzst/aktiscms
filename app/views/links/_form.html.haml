= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, :class => "form-control"
  .form-group
    = f.label :url
    = f.select :url, @sections_refnames , :class => "form-control"
  .form-group
    = f.label :visibility
    = f.check_box :visibility        
  .form-group
    = f.submit 'Save', :class => "btn btn-default"
