= form_for @section_element do |f|
  - if @section_element.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section_element.errors.count, "error")} prohibited this section_element from being saved:"
      %ul
        - @section_element.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, :class => "form-control"
  .form-group
    = f.label :content
    = f.text_area :content, :class => "form-control"
  .form-group
    = f.label :section
    = f.select :section_id, @sections, :class => "form-control", prompt: "Select section"
  .form-group
    = f.label :visibility
    = f.check_box :visibility
  .form-group
    = f.submit 'Save', :class => "btn btn-default"
