%h1
  Sections
  = link_to '', new_section_path, class: "glyphicon glyphicon-plus"
%table.table.table-bordered
  %tr
    %th Name
    %th Action
  - @sections.each do |section|
    %tr
      %td= section.name
      %td
        = link_to '', edit_section_path(section), class: "glyphicon glyphicon-pencil"
        = link_to '', section_path(section), class: "glyphicon glyphicon-search"
